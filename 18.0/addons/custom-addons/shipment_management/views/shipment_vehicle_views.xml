<odoo>
    <record id="view_shipment_vehicle_form" model="ir.ui.view">
        <field name="name">shipment.vehicle.form</field>
        <field name="model">shipment.vehicle</field>
        <field name="arch" type="xml">
            <form string="Vehicles">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="secured"/>
                        <field name="express"/>
                        <field name="category_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_shipment_vehicle_view" model="ir.actions.act_window">
        <field name="name">Vehicle</field>
        <field name="res_model">shipment.vehicle</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>