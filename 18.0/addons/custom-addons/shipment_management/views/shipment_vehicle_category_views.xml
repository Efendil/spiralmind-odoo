<odoo>
    <record id="view_shipment_vehicle_category_form" model="ir.ui.view">
        <field name="name">shipment.vehicle.category.form</field>
        <field name="model">shipment.vehicle.category</field>
        <field name="arch" type="xml">
            <form string="Vehicle categories">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="color" widget="color_picker"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_shipment_vehicle_category_view" model="ir.actions.act_window">
        <field name="name">Vehicle</field>
        <field name="res_model">shipment.vehicle.category</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>